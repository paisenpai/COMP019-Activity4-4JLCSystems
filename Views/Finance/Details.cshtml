@model COMP019_Activity4_4JLCSystems.Models.Entities.CashFlow
@{
    ViewData["Title"] = "Transaction Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2"><i class="bi bi-receipt me-2"></i>Transaction Details</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Cash Flow
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Transaction Info</h5>
                <span class="badge fs-6 @(Model.TransactionType == "Income" ? "bg-success" : "bg-danger")">
                    @Model.TransactionType
                </span>
            </div>
            <div class="card-body">
                <div class="text-center py-3 mb-3 @(Model.TransactionType == "Income" ? "bg-success" : "bg-danger") text-white rounded">
                    <h2 class="mb-0">@(Model.TransactionType == "Income" ? "+" : "-")?@Model.Amount.ToString("N2")</h2>
                </div>
                
                <table class="table table-sm">
                    <tr>
                        <td class="text-muted">Date:</td>
                        <td>@Model.TransactionDate.ToString("MMMM dd, yyyy")</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Category:</td>
                        <td>@Model.Category</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Description:</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Reference:</td>
                        <td><code>@(Model.ReferenceNumber ?? "N/A")</code></td>
                    </tr>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <tr>
                            <td class="text-muted">Notes:</td>
                            <td>@Model.Notes</td>
                        </tr>
                    }
                    <tr>
                        <td class="text-muted">Created:</td>
                        <td>@Model.CreatedDate.ToString("MMM dd, yyyy h:mm tt")</td>
                    </tr>
                </table>
                
                @if (Model.OrderId.HasValue || Model.ShipmentId.HasValue)
                {
                    <hr>
                    <h6>Related Records</h6>
                    @if (Model.OrderId.HasValue)
                    {
                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-receipt me-1"></i>View Order
                        </a>
                    }
                    @if (Model.ShipmentId.HasValue)
                    {
                        <a asp-controller="Shipments" asp-action="Details" asp-route-id="@Model.ShipmentId" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-truck me-1"></i>View Shipment
                        </a>
                    }
                }
            </div>
            <div class="card-footer bg-white">
                <a asp-action="Delete" asp-route-id="@Model.CashFlowId" class="btn btn-outline-danger">
                    <i class="bi bi-trash me-1"></i>Delete
                </a>
            </div>
        </div>
    </div>
</div>
