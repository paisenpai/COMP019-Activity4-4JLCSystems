@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 4JLC Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-red: #e74c3c;
            --primary-red-light: #ff6b6b;
            --primary-red-dark: #c0392b;
            --sidebar-bg: rgba(20, 20, 20, 0.95);
        }
        
        * { scrollbar-width: none; -ms-overflow-style: none; }
        *::-webkit-scrollbar { display: none; }
        
        body {
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
            min-height: 100vh;
        }
        
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            height: 100vh;
            background: var(--sidebar-bg);
            padding-top: 70px;
            z-index: 100;
        }
        
        .sidebar-brand {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            padding: 1rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 0;
            color: white;
            font-weight: 800;
            font-size: 1.5rem;
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-red-dark) 100%);
        }
        
        .sidebar-brand span {
            color: black;
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.7);
            padding: 0.9rem 1.5rem;
            margin: 0.25rem 0.75rem;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
        }
        
        .sidebar .nav-link:hover {
            color: white;
            background: rgba(231, 76, 60, 0.2);
        }
        
        .sidebar .nav-link.active {
            color: white;
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-red-light) 100%);
        }
        
        .main-wrapper {
            margin-left: 240px;
            min-height: 100vh;
        }
        
        .top-navbar {
            position: sticky;
            top: 0;
            z-index: 50;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 0.75rem 2rem;
        }
        
        .main-content {
            padding: 2rem;
        }
        
        .card {
            background: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .stat-card { border-radius: 16px; }
        .stat-card.bg-primary { background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-red-light) 100%) !important; }
        .stat-card.bg-warning { background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%) !important; }
        .stat-card.bg-success { background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%) !important; }
        .stat-card.bg-info { background: linear-gradient(135deg, #3498db 0%, #5dade2 100%) !important; }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-red-light) 100%);
            border: none;
            border-radius: 10px;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-red-dark) 0%, var(--primary-red) 100%);
        }
        
        .user-dropdown .dropdown-toggle::after { display: none; }
        .user-dropdown .dropdown-menu { border: none; border-radius: 12px; box-shadow: 0 10px 40px rgba(0,0,0,0.15); }
        
        .alert { border: none; border-radius: 12px; }
        .alert-success { background: rgba(39, 174, 96, 0.15); color: #27ae60; }
        .alert-danger { background: rgba(231, 76, 60, 0.15); color: var(--primary-red); }
    </style>
</head>
<body>
    <nav class="sidebar">
        <a href="/admin/dashboard" class="sidebar-brand text-decoration-none"><i class="bi bi-gear-wide-connected me-2"></i>4<span>JLC</span></a>
        
        <ul class="nav flex-column mt-2">
            <li class="nav-item">
                <a class="nav-link @(currentController == "Dashboard" ? "active" : "")" href="/admin/dashboard">
                    <i class="bi bi-grid-1x2-fill"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentController == "Orders" ? "active" : "")" href="/admin/orders">
                    <i class="bi bi-receipt"></i> Orders
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentController == "Shipments" ? "active" : "")" href="/admin/shipments">
                    <i class="bi bi-box-arrow-in-down"></i> Shipments
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentController == "Inventory" ? "active" : "")" href="/admin/inventory">
                    <i class="bi bi-boxes"></i> Inventory
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentController == "Finance" ? "active" : "")" href="/admin/finance">
                    <i class="bi bi-cash-stack"></i> Finance
                </a>
            </li>
        </ul>
    </nav>

    <div class="main-wrapper">
        <nav class="top-navbar d-flex justify-content-between align-items-center">
            <div></div>
            <div class="dropdown user-dropdown">
                <a class="dropdown-toggle d-flex align-items-center gap-2 text-decoration-none text-dark" href="#" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle fs-4"></i>
                    <span>@(Context.Session.GetString("FullName") ?? "Admin")</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><span class="dropdown-item-text small text-muted">Signed in as <strong>@Context.Session.GetString("Username")</strong></span></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Sign Out</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
        
        <main class="main-content">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show"><i class="bi bi-check-circle me-2"></i>@TempData["Success"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show"><i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
            }
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
