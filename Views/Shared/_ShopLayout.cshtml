@{
    var currentPath = Context.Request.Path.Value ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 4JLC Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-red: #e74c3c;
            --primary-red-light: #ff6b6b;
        }
        
        * { scrollbar-width: none; }
        *::-webkit-scrollbar { display: none; }
        
        body {
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            background: #0a0a0a;
            color: #fff;
            min-height: 100vh;
        }
        
        .navbar-shop {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: white !important;
        }
        
        .navbar-brand span {
            color: var(--primary-red);
        }
        
        .nav-link {
            color: rgba(255,255,255,0.7) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s;
        }
        .nav-link:hover, .nav-link.active {
            background: rgba(255,255,255,0.1);
            color: white !important;
        }
        
        .main-content {
            min-height: calc(100vh - 130px);
            padding: 2rem 0;
        }
        
        .card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 16px;
            color: white;
            transition: all 0.3s;
        }
        .card:hover {
            transform: translateY(-3px);
            border-color: rgba(231, 76, 60, 0.3);
            box-shadow: 0 8px 25px rgba(231, 76, 60, 0.15);
        }
        
        .card-header {
            background: rgba(255,255,255,0.05);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-red), var(--primary-red-light));
            border: none;
            border-radius: 10px;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #c0392b, var(--primary-red));
            transform: translateY(-2px);
        }
        
        .btn-outline-primary {
            border-color: var(--primary-red);
            color: var(--primary-red);
        }
        .btn-outline-primary:hover {
            background: var(--primary-red);
            border-color: var(--primary-red);
        }
        
        .btn-outline-secondary {
            border-color: rgba(255,255,255,0.3);
            color: rgba(255,255,255,0.7);
        }
        .btn-outline-secondary:hover {
            background: rgba(255,255,255,0.1);
            border-color: rgba(255,255,255,0.5);
            color: white;
        }
        
        .btn-outline-danger {
            border-color: var(--primary-red);
            color: var(--primary-red);
        }
        
        .form-control, .form-select {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.2);
            color: white;
        }
        .form-control:focus, .form-select:focus {
            background: rgba(255,255,255,0.1);
            border-color: var(--primary-red);
            color: white;
            box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.2);
        }
        .form-control::placeholder {
            color: rgba(255,255,255,0.4);
        }
        
        .form-label {
            color: rgba(255,255,255,0.7);
        }
        
        .input-group-text {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.2);
            color: rgba(255,255,255,0.7);
        }
        
        .form-select option {
            background: #1a1a1a;
            color: white;
        }
        
        .table {
            color: white;
        }
        .table thead {
            background: rgba(255,255,255,0.05);
        }
        .table td, .table th {
            border-color: rgba(255,255,255,0.1);
        }
        
        .bg-light {
            background: rgba(255,255,255,0.05) !important;
        }
        
        .text-muted {
            color: rgba(255,255,255,0.5) !important;
        }
        
        .footer {
            background: rgba(255,255,255,0.02);
            border-top: 1px solid rgba(255,255,255,0.1);
            color: rgba(255,255,255,0.5);
            padding: 1.5rem 0;
        }
        
        .alert { border: none; border-radius: 12px; }
        .alert-success { background: rgba(39, 174, 96, 0.2); color: #2ecc71; border: 1px solid rgba(39, 174, 96, 0.3); }
        .alert-danger { background: rgba(231, 76, 60, 0.2); color: #ff6b6b; border: 1px solid rgba(231, 76, 60, 0.3); }
        
        .user-dropdown .dropdown-toggle::after { display: none; }
        .dropdown-menu {
            background: rgba(20, 20, 20, 0.95);
            border: 1px solid rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
        }
        .dropdown-item {
            color: rgba(255,255,255,0.7);
        }
        .dropdown-item:hover {
            background: rgba(255,255,255,0.1);
            color: white;
        }
        
        .badge {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-shop">
        <div class="container">
            <a class="navbar-brand" href="/shop">
                <i class="bi bi-gear-wide-connected me-2"></i>4<span>JLC</span>
            </a>
            <button class="navbar-toggler border-0 text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarShop">
                <i class="bi bi-list fs-4"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarShop">
                <ul class="navbar-nav ms-auto align-items-center gap-1">
                    <li class="nav-item">
                        <a class="nav-link @(currentPath == "/shop" ? "active" : "")" href="/shop">
                            <i class="bi bi-shop me-1"></i>Shop
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentPath == "/cart" ? "active" : "")" href="/cart">
                            <i class="bi bi-cart3 me-1"></i>Cart
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentPath == "/track" ? "active" : "")" href="/track">
                            <i class="bi bi-search me-1"></i>Track Order
                        </a>
                    </li>
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li class="nav-item dropdown user-dropdown ms-2">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                                @(Context.Session.GetString("FullName") ?? Context.Session.GetString("Username"))
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-2">
                            <a class="nav-link" href="/login">
                                <i class="bi bi-person me-1"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </div>
    </main>

    <footer class="footer text-center">
        <small>&copy; @DateTime.Now.Year 4JLC - Auto Parts & Accessories</small>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
