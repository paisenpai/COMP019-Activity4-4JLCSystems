@model COMP019_Activity4_4JLCSystems.Models.Entities.Order
@{
    ViewData["Title"] = "Delete Order";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-danger"><i class="bi bi-trash me-2"></i>Delete Order</h1>
    <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Order
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <p class="lead">Are you sure you want to delete this order?</p>
                
                <div class="bg-light p-3 rounded mb-3">
                    <p class="mb-1"><strong>Order #:</strong> <code>@Model.OrderNumber</code></p>
                    <p class="mb-1"><strong>Customer:</strong> @(Model.CustomerName ?? "N/A")</p>
                    <p class="mb-1"><strong>Total:</strong> ?@Model.TotalAmount.ToString("N2")</p>
                    <p class="mb-0"><strong>Status:</strong> 
                        <span class="badge bg-@(Model.OrderStatus == "Pending" ? "warning" : "secondary")">@Model.OrderStatus</span>
                    </p>
                </div>
                
                @if (Model.OrderStatus == "Pending")
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Inventory will be restored for this pending order.
                    </div>
                }
                
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    This action cannot be undone.
                </div>
            </div>
            <div class="card-footer bg-white">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.OrderId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete Order
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
