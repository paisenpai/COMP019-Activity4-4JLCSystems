@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>4JLC - Auto Parts & Accessories</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-red: #e74c3c;
            --primary-red-light: #ff6b6b;
        }
        
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
            background: #0a0a0a;
            min-height: 100vh;
            color: white;
            overflow-x: hidden;
        }
        
        .navbar {
            background: transparent;
            position: absolute;
            width: 100%;
            z-index: 100;
            padding: 1.5rem 0;
        }
        
        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: white !important;
        }
        
        .navbar-brand span {
            color: var(--primary-red);
        }
        
        .btn-nav {
            padding: 0.6rem 1.5rem;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .btn-login {
            background: transparent;
            border: 2px solid rgba(255,255,255,0.3);
            color: white;
        }
        .btn-login:hover {
            background: white;
            color: #0a0a0a;
            border-color: white;
        }
        
        .btn-signup {
            background: var(--primary-red);
            border: 2px solid var(--primary-red);
            color: white;
        }
        .btn-signup:hover {
            background: var(--primary-red-light);
            border-color: var(--primary-red-light);
            transform: translateY(-2px);
        }
        
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            position: relative;
        }
        
        .hero-content {
            position: relative;
            z-index: 10;
        }
        
        .hero h1 {
            font-size: 8rem;
            font-weight: 900;
            line-height: 1;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }
        
        .hero h1 .highlight {
            color: var(--primary-red);
        }
        
        .hero h2 {
            font-size: 2rem;
            font-weight: 400;
            color: rgba(255,255,255,0.6);
            margin-bottom: 2rem;
        }
        
        .hero p {
            font-size: 1.1rem;
            color: rgba(255,255,255,0.5);
            line-height: 1.8;
            margin-bottom: 2.5rem;
            max-width: 450px;
        }
        
        .btn-cta {
            background: var(--primary-red);
            border: none;
            color: white;
            border-radius: 30px;
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .btn-cta:hover {
            background: var(--primary-red-light);
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(231, 76, 60, 0.4);
            color: white;
        }
        
        .btn-secondary-cta {
            background: transparent;
            border: 2px solid rgba(255,255,255,0.2);
            color: white;
            border-radius: 30px;
            padding: 1rem 2rem;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s;
        }
        .btn-secondary-cta:hover {
            background: rgba(255,255,255,0.1);
            border-color: rgba(255,255,255,0.4);
            color: white;
        }
        
        /* Right side - Simple visual */
        .hero-visual {
            position: absolute;
            right: 0;
            top: 0;
            width: 50%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
        
        .hero-visual::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 300px;
            height: 100%;
            background: linear-gradient(to right, #0a0a0a, transparent);
            z-index: 5;
        }
        
        .visual-circle {
            width: 500px;
            height: 500px;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(231, 76, 60, 0.15), rgba(231, 76, 60, 0.05));
            border: 1px solid rgba(231, 76, 60, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }
        
        .visual-circle::before {
            content: '';
            position: absolute;
            width: 350px;
            height: 350px;
            border-radius: 50%;
            border: 1px solid rgba(255,255,255,0.1);
        }
        
        .visual-circle::after {
            content: '';
            position: absolute;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-red), var(--primary-red-light));
            opacity: 0.3;
            filter: blur(40px);
        }
        
        .visual-icon {
            font-size: 6rem;
            color: var(--primary-red);
            opacity: 0.8;
            z-index: 10;
        }
        
        /* Floating elements */
        .floating-item {
            position: absolute;
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 15px;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .floating-item.item-1 {
            top: 25%;
            right: 15%;
        }
        
        .floating-item.item-2 {
            bottom: 30%;
            right: 10%;
        }
        
        .floating-item .item-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--primary-red), var(--primary-red-light));
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .floating-item span {
            font-size: 0.9rem;
            font-weight: 500;
        }
        
        @@media (max-width: 992px) {
            .hero h1 { font-size: 5rem; }
            .hero h2 { font-size: 1.5rem; }
            .hero-visual { display: none; }
            .hero-content { text-align: center; }
            .hero p { margin: 0 auto 2rem; }
            .d-flex.gap-3 { justify-content: center; }
        }
        
        @@media (max-width: 576px) {
            .hero h1 { font-size: 3.5rem; }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand" href="/landing"><i class="bi bi-gear-wide-connected me-2"></i>4<span>JLC</span></a>
            <div class="d-flex gap-2">
                <a href="/login" class="btn btn-nav btn-login">Login</a>
                <a href="/signup" class="btn btn-nav btn-signup">Sign Up</a>
            </div>
        </div>
    </nav>
    
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1>4<span class="highlight">JLC</span></h1>
                        <h2>Auto Parts & Accessories</h2>
                        
                        <p>
                            Your trusted source for quality vehicle parts. From engine components to accessories, we've got everything your ride needs.
                        </p>
                        
                        <div class="d-flex gap-3 flex-wrap">
                            <a href="/shop" class="btn btn-cta">
                                <i class="bi bi-shop"></i>
                                Browse Shop
                            </a>
                            <a href="/track" class="btn btn-secondary-cta">
                                <i class="bi bi-search me-2"></i>Track Order
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Side Visual -->
        <div class="hero-visual">
            <div class="visual-circle">
                <i class="bi bi-gear-wide-connected visual-icon"></i>
            </div>
        </div>
    </section>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
