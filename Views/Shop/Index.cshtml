@model List<COMP019_Activity4_4JLCSystems.Models.Entities.Product>
@{
    ViewData["Title"] = "Shop";
    Layout = "_ShopLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-shop me-2"></i>Shop</h2>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Search products..." value="@ViewBag.SearchTerm">
                </div>
            </div>
            <div class="col-md-4">
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories as List<string>)
                    {
                        <option value="@cat" selected="@(ViewBag.SelectedCategory == cat)">@cat</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Products Grid -->
<div class="row g-4">
    @if (Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="bg-light rounded-3 p-4 mb-3 text-center">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.ProductName" class="img-fluid" style="max-height: 120px;">
                            }
                            else
                            {
                                <i class="bi bi-box-seam display-4 text-muted"></i>
                            }
                        </div>
                        <h6 class="mb-1">@product.ProductName</h6>
                        <small class="text-muted mb-2">@product.Brand</small>
                        <p class="fw-bold fs-5 mb-2" style="color: #ff6b6b;">&#8369;@product.SellingPrice.ToString("N2")</p>
                        <small class="text-muted mb-3">
                            <i class="bi bi-box me-1"></i>@product.Inventory?.QuantityInStock available
                        </small>
                        <form method="post" action="/cart/add" class="mt-auto">
                            <input type="hidden" name="productId" value="@product.ProductId">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-cart-plus me-1"></i>Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3">No Products Found</h5>
                    <p class="text-muted">Try adjusting your search or filter.</p>
                </div>
            </div>
        </div>
    }
</div>
