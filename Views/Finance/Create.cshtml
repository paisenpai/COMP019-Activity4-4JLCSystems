@model COMP019_Activity4_4JLCSystems.Models.ViewModels.CreateCashFlowViewModel
@{
    ViewData["Title"] = "Add Transaction";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2"><i class="bi bi-plus-lg me-2"></i>Add Cash Flow Transaction</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Cash Flow
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="TransactionDate" class="form-label"></label>
                        <input asp-for="TransactionDate" class="form-control" type="date">
                        <span asp-validation-for="TransactionDate" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="TransactionType" class="form-label"></label>
                        <select asp-for="TransactionType" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option value="Income">Income (Money In)</option>
                            <option value="Expense">Expense (Money Out)</option>
                        </select>
                        <span asp-validation-for="TransactionType" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select">
                            <option value="">-- Select Category --</option>
                            <optgroup label="Income Categories">
                                <option value="Sales">Sales</option>
                                <option value="Refund">Refund Received</option>
                                <option value="Other Income">Other Income</option>
                            </optgroup>
                            <optgroup label="Expense Categories">
                                <option value="Logistics">Logistics</option>
                                <option value="Shipping">Shipping</option>
                                <option value="Purchase">Purchase</option>
                                <option value="Marketing">Marketing</option>
                                <option value="Utilities">Utilities</option>
                                <option value="Other Expense">Other Expense</option>
                            </optgroup>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Enter description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">?</span>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01">
                        </div>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ReferenceNumber" class="form-label"></label>
                        <input asp-for="ReferenceNumber" class="form-control" placeholder="Receipt #, Invoice #, etc. (optional)">
                        <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Additional notes (optional)"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Add Transaction
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
