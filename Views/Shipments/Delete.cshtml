@model COMP019_Activity4_4JLCSystems.Models.Entities.Shipment
@{
    ViewData["Title"] = "Delete Shipment";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-danger"><i class="bi bi-trash me-2"></i>Delete Shipment</h1>
    <a asp-action="Details" asp-route-id="@Model.ShipmentId" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Shipment
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <p class="lead">Are you sure you want to delete this shipment?</p>
                
                <div class="bg-light p-3 rounded mb-3">
                    <p class="mb-1"><strong>Shipment #:</strong> <code>@Model.ShipmentNumber</code></p>
                    <p class="mb-1"><strong>Store/Shop:</strong> @Model.StoreSource</p>
                    <p class="mb-1"><strong>Order Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy")</p>
                    <p class="mb-1"><strong>Items:</strong> @Model.ShipmentItems.Sum(si => si.Quantity)</p>
                    <p class="mb-0"><strong>Status:</strong> 
                        <span class="badge bg-@(Model.Status == "Pending" ? "warning" : Model.Status == "Received" ? "success" : "secondary")">@Model.Status</span>
                    </p>
                </div>
                
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    This action cannot be undone. All shipment items will also be deleted.
                </div>
            </div>
            <div class="card-footer bg-white">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.ShipmentId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete Shipment
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.ShipmentId" class="btn btn-outline-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
