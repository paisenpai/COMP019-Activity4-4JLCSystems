@model COMP019_Activity4_4JLCSystems.Models.Entities.CashFlow
@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 text-danger"><i class="bi bi-trash me-2"></i>Delete Transaction</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Cash Flow
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <p class="lead">Are you sure you want to delete this transaction?</p>
                
                <div class="bg-light p-3 rounded mb-3">
                    <p class="mb-1"><strong>Date:</strong> @Model.TransactionDate.ToString("MMM dd, yyyy")</p>
                    <p class="mb-1"><strong>Type:</strong> 
                        <span class="badge @(Model.TransactionType == "Income" ? "bg-success" : "bg-danger")">@Model.TransactionType</span>
                    </p>
                    <p class="mb-1"><strong>Category:</strong> @Model.Category</p>
                    <p class="mb-1"><strong>Description:</strong> @Model.Description</p>
                    <p class="mb-0"><strong>Amount:</strong> 
                        <span class="@(Model.TransactionType == "Income" ? "text-success" : "text-danger")">
                            @(Model.TransactionType == "Income" ? "+" : "-")?@Model.Amount.ToString("N2")
                        </span>
                    </p>
                </div>
                
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    This action cannot be undone.
                </div>
            </div>
            <div class="card-footer bg-white">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.CashFlowId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete Transaction
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
