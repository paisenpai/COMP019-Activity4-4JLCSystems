@model List<COMP019_Activity4_4JLCSystems.Models.ViewModels.InventoryItemViewModel>
@{
    ViewData["Title"] = "Low Stock Alert";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2"><i class="bi bi-exclamation-triangle text-warning me-2"></i>Low Stock Alert</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Inventory
    </a>
</div>

@if (Model.Any())
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>@Model.Count items</strong> need attention. Consider restocking these products.
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Item Code</th>
                        <th class="text-center">Current Stock</th>
                        <th class="text-center">Reorder Level</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.IsOutOfStock ? "table-danger" : "table-warning")">
                            <td>
                                <strong>@item.ProductName</strong>
                                @if (!string.IsNullOrEmpty(item.Brand))
                                {
                                    <br><small class="text-muted">@item.Brand</small>
                                }
                            </td>
                            <td><code>@item.ItemCode</code></td>
                            <td class="text-center">
                                <span class="fs-5 @(item.IsOutOfStock ? "text-danger" : "text-warning")">
                                    @item.QuantityInStock
                                </span>
                            </td>
                            <td class="text-center">@item.ReorderLevel</td>
                            <td class="text-center">
                                <span class="badge @(item.IsOutOfStock ? "bg-danger" : "bg-warning text-dark")">
                                    @item.StockStatus
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Adjust" asp-route-id="@item.InventoryId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-plus-lg me-1"></i>Restock
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-check-circle display-1 text-success"></i>
            <h4 class="mt-3">All Products Well Stocked!</h4>
            <p class="text-muted">No products are currently below their reorder levels.</p>
            <a asp-action="Index" class="btn btn-primary">View All Inventory</a>
        </div>
    </div>
}
